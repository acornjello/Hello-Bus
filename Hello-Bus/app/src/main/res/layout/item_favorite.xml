<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        card_view:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/text_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="type"
                android:layout_weight="1.5"
                android:padding="5dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/text_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="item_name"
                android:layout_weight="3"
                android:padding="5dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/text_route_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="route_city"
                android:layout_weight="1.5"
                android:padding="5dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/text_route_direction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="route_direction"
                android:layout_weight="3"
                android:padding="5dp"
                android:textAlignment="center"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_delete_favorite"
                android:src="@drawable/circle_minus"
                android:background="#00ff0000"
                android:onClick="btnDeleteFavorite"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>