<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="test.sks.com.busapp.Passenger">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scale_base_height="320"
        app:scale_base_width="220" >

        <Button
            android:id="@+id/btn_search_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="searchRoute"
            android:background="@drawable/button_box"
            android:drawableTop="@drawable/bus_button"
            android:padding="30dp"
            android:text="버스 검색"
            app:scale_height="95"
            app:scale_left="10"
            app:scale_textsize="8"
            app:scale_top="10"
            app:scale_width="95"/>
        <Button
            android:id="@+id/btn_search_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_box"
            android:drawableTop="@drawable/bus_station_button"
            android:onClick="searchStation"
            android:padding="30dp"
            android:text="정류소 검색"
            app:scale_height="95"
            app:scale_left="115"
            app:scale_textsize="8"
            app:scale_top="10"
            app:scale_width="95"/>

        <Button
            android:id="@+id/btn_Peripheral_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_box"
            android:drawableTop="@drawable/map_button"
            android:padding="30dp"
            android:onClick="PeripheralStation"
            android:text="주변 정류소"
            app:scale_height="95"
            app:scale_left="10"
            app:scale_textsize="8"
            app:scale_top="115"
            app:scale_width="95"
                />

        <Button
            android:id="@+id/btn_favorite_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="viewFavoriteList"
            android:background="@drawable/button_box"
            android:drawableTop="@drawable/star_button"
            android:padding="30dp"
            android:text="즐겨찾기"
            app:scale_height="95"
            app:scale_left="115"
            app:scale_textsize="8"
            app:scale_top="115"
            app:scale_width="95"
            />

        <Button
            android:id="@+id/btn_alert_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnGoAlertActivity"
            android:background="@drawable/button_box"
            android:drawableTop="@drawable/alarm_button"
            android:padding="30dp"
            android:text="탑승 알림 정보"
            app:scale_height="95"
            app:scale_left="10"
            app:scale_textsize="8"
            app:scale_top="220"
            app:scale_width="95"
            />
        <Button
            android:id="@+id/btn_information_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnGoInformationActivity"
            android:background="@drawable/button_box"
            android:drawableTop="@drawable/info_button"
            android:padding="30dp"
            android:text="도움말"
            app:scale_height="95"
            app:scale_left="115"
            app:scale_textsize="8"
            app:scale_top="220"
            app:scale_width="95"
            />



    </com.ssomai.android.scalablelayout.ScalableLayout>
    </ScrollView>
